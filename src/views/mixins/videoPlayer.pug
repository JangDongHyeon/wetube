mixin videoPlayer(video ={})
    .videoPlayer#jsVideoPlayer
        //- src aws s3 사용시 video.src만 쓰기
        video(src=`/${video.src}`) 
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range",min="0",max="1",step="0.1" value="0.5")
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column
                sapn#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand